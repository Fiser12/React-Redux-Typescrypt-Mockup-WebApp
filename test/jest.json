{
  "rootDir": "../",
  "testRegex": "\\.test\\.tsx?$",
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json",
    "ts",
    "tsx"
  ],
  "setupFiles": [
    "<rootDir>/test/polyfills.js",
    "<rootDir>/test/setupTest.js"
  ],
  "testURL": "http://localhost/",
  "transform": {
    ".jsx?": "babel-jest",
    ".tsx?": "ts-jest"
  },
  "restoreMocks": true,
  "snapshotSerializers": [
    "enzyme-to-json/serializer"
  ],
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif)$": "identity-obj-proxy",
    "\\.(css|less|scss|sass)$": "identity-obj-proxy",
    "^core$": "<rootDir>/src/core"
  }
}